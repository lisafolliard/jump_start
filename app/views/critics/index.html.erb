<p id="notice"><%= notice %></p>
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<h1>Critique Experts</h1>

<div class='row'>
  <center>
  <div class='col-md-2'>
  </div>
  <div class='col-md-8'>
  <table class="table">
    <thead>
      <tr>
        <th colspan="2">Name</th>
        <th colspan="8">Description</th>
        <th colspan="8">Address</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @critics.each do |critic| %>
        <tr>
          <td colspan="2"><%= critic.name %></td>
          <td colspan="8"><%= critic.description %></td>
          <td colspan="8"><%= critic.address %></td>
          <td><%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_critic_path(critic) %>  <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, critic, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Critic', new_critic_path %>
  </div>
  <div class='col-md-2'>
  </div>
</div>
</center>
<br>
<div class='row'>
  <center>
  <div class='col-md-12'>
    <div class='map-style' style='width: 800px;'>
      <div id="map" style='width: 800px; height: 400px;'></div>
    </div>
  </div>
</center>
</div>

<script type="text/javascript">
var mapStyle = [
  {
        "elementType": "labels",
        "stylers": [
            {
                "visibility": "off"
            }
        ]
    },
    {
        "elementType": "geometry",
        "stylers": [
            {
                "visibility": "off"
            }
        ]
    },
    {
        "featureType": "road",
        "elementType": "geometry",
        "stylers": [
            {
                "visibility": "on"
            },
            {
                "color": "#000000"
            }
        ]
    },
    {
        "featureType": "landscape",
        "stylers": [
            {
                "color": "#ffffff"
            },
            {
                "visibility": "on"
            }
        ]
    },
    {}
];
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {
    styles: mapStyle
  },
  internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  });
</script>
