<span class='user_about'><p><%= @user.about %></p></span>






<div class='row'>
  <ul>
    <% @user.images.each do |image| %>
    <div id='image_<%= image.id %>'>
      <div class='col-sm-4'>
        <li><%= link_to image_tag(image.image), user_image_path(@user, image) %></li>
        <li><%= image.description %></li>

        <% if current_user == @user %>
          <li><%= link_to "<span id='edit_image_test' class='glyphicon glyphicon-pencil'></span>".html_safe, edit_user_image_path(@user, image) %></li>
          <li><%= link_to "<span id='delete_image_test' class='glyphicon glyphicon-trash'></span>".html_safe, user_image_path(@user, image), :method => 'delete' %></li>
        <% end %>
      </div>
    </div>
    <% end %>
  </ul>
</div>

<hr>

    <% if current_user == @user %>
    <%= link_to "Add Image", new_user_image_path(@user), remote: true, id: 'new-image-link' %>
    <% end %>
